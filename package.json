{
  "name": "open-skills",
  "displayName": "Open Skills",
  "description": "An skill manager to make N00B AI actually usefull !",
  "version": "0.1.0",
  "publisher": "Mohammad-Ahmad",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/x7dl8p/open-skills"
  },
  "icon": "assets/open-skills.png",
  "bugs": {
    "url": "https://github.com/x7dl8p/open-skills/issues"
  },
  "homepage": "https://github.com/x7dl8p/open-skills#readme",
  "keywords": [
    "ai",
    "skills",
    "cursor",
    "agent",
    "skill-manager",
    "developer-tools",
    "productivity"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "galleryBanner": {
    "color": "#0e1117",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "openSkills",
          "title": "Open Skills",
          "icon": "assets/open-skills-outline.svg"
        }
      ]
    },
    "views": {
      "openSkills": [
        {
          "icon": "assets/open-skills-outline.svg",
          "id": "openSkillsView",
          "name": "Skills",
          "contextualTitle": "Open Skills"
        },
        {
          "icon": "assets/open-skills-outline.svg",
          "id": "openSkillsMarketplaceView",
          "name": "Marketplace",
          "contextualTitle": "Skills Marketplace"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "openSkillsView",
        "contents": "No skills detected yet.\n\n[Scan Workspace](command:open-skills.rescan)\n\nConfigure additional scan paths in [settings](command:open-skills.openSettings)."
      },
      {
        "view": "openSkillsMarketplaceView",
        "contents": "Discover and install skills from GitHub.\n\n[Load Marketplace](command:open-skills.refreshMarketplace)"
      }
    ],
    "commands": [
      {
        "command": "open-skills.rescan",
        "title": "Rescan Workspace",
        "category": "Open Skills",
        "icon": "$(refresh)"
      },
      {
        "command": "open-skills.openGapAnalysis",
        "title": "Open Gap Analysis",
        "category": "Open Skills",
        "icon": "$(pulse)"
      },
      {
        "command": "open-skills.openAbout",
        "title": "About Open Skills",
        "category": "Open Skills",
        "icon": "$(info)"
      },
      {
        "command": "open-skills.openSettings",
        "title": "Settings",
        "category": "Open Skills",
        "icon": "$(gear)"
      },
      {
        "command": "open-skills.resetOnboarding",
        "title": "Reset Onboarding",
        "category": "Open Skills"
      },
      {
        "command": "open-skills.viewSkill",
        "title": "View Skill",
        "category": "Open Skills",
        "icon": "$(go-to-file)"
      },
      {
        "command": "open-skills.importSkillFromTree",
        "title": "Import Skill",
        "category": "Open Skills",
        "icon": "$(cloud-download)"
      },
      {
        "command": "open-skills.importSkillFromHover",
        "title": "Import Skill (Hover)",
        "category": "Open Skills"
      },
      {
        "command": "open-skills.deleteSkill",
        "title": "Delete Skill",
        "category": "Open Skills",
        "icon": "$(trash)"
      },
      {
        "command": "open-skills.importAllMissingSkills",
        "title": "Import All Missing",
        "category": "Open Skills",
        "icon": "$(cloud-download)"
      },
      {
        "command": "open-skills.refreshMarketplace",
        "title": "Refresh Marketplace",
        "category": "Open Skills",
        "icon": "$(refresh)"
      },
      {
        "command": "open-skills.installMarketplaceSkill",
        "title": "Install Skill",
        "category": "Open Skills",
        "icon": "$(cloud-download)"
      },
      {
        "command": "open-skills.viewMarketplaceSkill",
        "title": "View Details",
        "category": "Open Skills"
      },
      {
        "command": "open-skills.previewSkill",
        "title": "Preview Skill",
        "category": "Open Skills",
        "icon": "$(open-preview)"
      },
      {
        "command": "open-skills.addCustomRepository",
        "title": "Add Repository",
        "category": "Open Skills Marketplace",
        "icon": "$(add)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "open-skills.rescan",
          "when": "view == openSkillsView",
          "group": "navigation"
        },
        {
          "command": "open-skills.refreshMarketplace",
          "when": "view == openSkillsMarketplaceView",
          "group": "navigation"
        },
        {
          "command": "open-skills.addCustomRepository",
          "when": "view == openSkillsMarketplaceView",
          "group": "navigation"
        },
        {
          "command": "open-skills.openGapAnalysis",
          "when": "view == openSkillsView",
          "group": "navigation"
        },
        {
          "command": "open-skills.openSettings",
          "when": "view == openSkillsView || view == openSkillsMarketplaceView",
          "group": "overflow"
        },
        {
          "command": "open-skills.openAbout",
          "when": "view == openSkillsView || view == openSkillsMarketplaceView",
          "group": "overflow"
        },
        {
          "command": "open-skills.resetOnboarding",
          "when": "view == openSkillsView",
          "group": "overflow"
        }
      ],
      "view/item/context": [
        {
          "command": "open-skills.importSkillFromTree",
          "when": "view == openSkillsView && viewItem == 'skillItem.active.unsynced' || view == openSkillsView && viewItem == 'skillItem.missing'",
          "group": "inline"
        },
        {
          "command": "open-skills.deleteSkill",
          "when": "view == openSkillsView && viewItem =~ /^skillItem\\.(active\\.(synced|unsynced)|imported)$/",
          "group": "inline"
        },
        {
          "command": "open-skills.importAllMissingSkills",
          "when": "view == openSkillsView && viewItem == 'skillGroupMissing'",
          "group": "inline"
        },
        {
          "command": "open-skills.viewSkill",
          "when": "view == openSkillsView && viewItem =~ /^skillItem\\./",
          "group": "inline"
        },
        {
          "command": "open-skills.installMarketplaceSkill",
          "when": "view == openSkillsMarketplaceView && viewItem == 'marketplaceSkill'",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Open Skills",
      "properties": {
        "open-skills.customScanPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "markdownDescription": "Additional relative paths to scan for `SKILL.md` files. Example: `[\".windsurf/rules\", \"docs/skills\"]`",
          "scope": "resource"
        },
        "open-skills.targetImportPath": {
          "type": "string",
          "default": ".agent/skills",
          "markdownDescription": "Relative path within the workspace where imported skills will be placed.",
          "scope": "resource"
        },
        "open-skills.globalSkillsPath": {
          "type": "string",
          "default": "~/open-skills",
          "markdownDescription": "Path to your global 'My Skills' directory. Defaults to `~/open-skills`.",
          "scope": "window"
        },
        "open-skills.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show skill status in the VS Code status bar.",
          "scope": "window"
        },
        "open-skills.scanOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan the workspace when the extension activates.",
          "scope": "window"
        },
        "open-skills.skillRepositories": {
          "type": "array",
          "default": [],
          "description": "GitHub repositories to fetch skills from"
        },
        "open-skills.githubToken": {
          "type": "string",
          "default": "",
          "description": "Optional GitHub Personal Access Token to increase API limits.",
          "scope": "window"
        },
        "open-skills.cacheTimeout": {
          "type": "number",
          "default": 3600,
          "description": "Timeout in seconds for caching GitHub marketplace requests.",
          "scope": "window"
        }
      }
    },
    "walkthroughs": [
      {
        "id": "openSkills.gettingStarted",
        "title": "Getting Started with Open Skills",
        "description": "Set up AI skill management in your workspace in minutes.",
        "steps": [
          {
            "id": "openSkills.step.activate",
            "title": "Activate the Extension",
            "description": "Open the Open Skills panel from the activity bar on the left.\n\n[Open Open Skills Panel](command:openSkillsView.focus)",
            "media": {
              "markdown": "Explore the sidebar to see detected skills grouped by status."
            }
          },
          {
            "id": "openSkills.step.scan",
            "title": "Scan Your Workspace",
            "description": "Click Rescan to detect all `SKILL.md` files in your project.\n\n[Rescan Workspace](command:open-skills.rescan)",
            "media": {
              "markdown": "Open Skills searches `.agent/skills`, `.cursor/rules`, `.cursor/skills`, and any custom paths you configure."
            }
          },
          {
            "id": "openSkills.step.analyze",
            "title": "Analyze Skill Gaps",
            "description": "View your skill coverage and import missing skills with one click.\n\n[Open Gap Analysis](command:open-skills.openGapAnalysis)",
            "media": {
              "markdown": "See which skills are active, missing, or imported in your environment."
            }
          },
          {
            "id": "openSkills.step.configure",
            "title": "Customize Settings",
            "description": "Add custom scan paths, change the import directory, and more.\n\n[Open Settings](command:open-skills.openSettings)",
            "media": {
              "markdown": "All settings support workspace-level configuration so your team shares the same setup."
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
